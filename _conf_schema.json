{
  "enabled": {
    "type": "bool",
    "default": true,
    "description": "是否启用Discord到Kook消息转发功能"
  },
  "discord_platform_id": {
    "type": "string",
    "default": "",
    "description": "Discord平台适配器ID"
  },
  "kook_platform_id": {
    "type": "string",
    "default": "",
    "description": "Kook平台适配器ID"
  },
  "forward_all_channels": {
    "type": "bool",
    "default": false,
    "description": "是否转发所有Discord频道的消息"
  },
  "default_discord_channel": {
    "type": "string",
    "default": "",
    "description": "默认Discord频道ID（当关闭转发所有频道时，只转发此频道的消息）"
  },
  "default_kook_channel": {
    "type": "string",
    "default": "",
    "description": "默认Kook频道ID（当没有特定映射时使用）"
  },
  "include_bot_messages": {
    "type": "bool",
    "default": false,
    "description": "是否包含机器人发送的消息"
  },
  "message_prefix": {
    "type": "string",
    "default": "[Discord] ",
    "description": "转发消息的前缀标识"
  },
  "image_cleanup_hours": {
    "type": "int",
    "default": 24,
    "description": "图片文件自动清理时间（小时），设置为0表示不自动清理"
  },
  "video_cleanup_hours": {
    "type": "int",
    "default": 24,
    "description": "视频文件自动清理时间（小时），设置为0表示不自动清理"
  },
  "channel_mappings": {
    "type": "text",
    "default": "",
    "description": "多频道映射配置 - 每行一个映射，格式：Discord频道ID 空格 Kook频道ID\n例如：\n1416029491796381806 3467992097213849\n1234567890123456 9876543210987654",
    "title": "多频道映射配置",
    "placeholder": "请输入频道映射，每行一个，格式：Discord频道ID 空格 Kook频道ID\n例如：\n1416029491796381806 3467992097213849\n1234567890123456 9876543210987654"
  },
  "enable_translation": {
    "type": "bool",
    "default": false,
    "description": "是否启用消息翻译功能"
  },
  "translation_provider": {
    "type": "string",
    "default": "tencent",
    "description": "翻译服务提供商 (可选值: tencent, baidu, google)"
  },
  "source_language": {
    "type": "string",
    "default": "auto",
    "description": "源语言代码（auto为自动检测）"
  },
  "target_language": {
    "type": "string",
    "default": "zh",
    "description": "目标语言代码（zh为中文）"
  },
  "tencent_secret_id": {
    "type": "string",
    "default": "",
    "description": "腾讯云翻译API的SecretId"
  },
  "tencent_secret_key": {
    "type": "string",
    "default": "",
    "description": "腾讯云翻译API密钥"
  },
  "baidu_app_id": {
    "type": "string",
    "default": "",
    "description": "百度翻译API的APP ID"
  },
  "baidu_secret_key": {
    "type": "string",
    "default": "",
    "description": "百度翻译API的密钥"
  },
  "google_api_key": {
    "type": "string",
    "default": "",
    "description": "谷歌翻译API的密钥"
  },
  "translate_threshold": {
    "type": "int",
    "default": 10,
    "description": "翻译阈值：消息长度超过此值才进行翻译（字符数）"
  }
}